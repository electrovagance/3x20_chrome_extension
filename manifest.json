{
    "name": "3x20",
    "version": "1.0",
    "description": "Helps with reducing eyestrain by reminding you to take a break according to the 20-20-20 rule",
    "manifest_version": 2,
    "browser_action": {
        "default_title": "3x20",
        "default_icon": "stopwatch-solid-small-fontawesome.png",
        "default_popup": "popup.html?popup=true"
    },
    "icons": {
        "128": "stopwatch-solid-fontawesome.png"
    },
    "permissions": [
        "storage",
        "notifications",
        "alarms"
    ],
    "background": {
            "scripts": [
                "background.js"
            ],
            "persistent": false
    }
}